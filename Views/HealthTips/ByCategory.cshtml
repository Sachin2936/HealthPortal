@model List<HealthTipsPortal.Models.HealthTip>
@{
    ViewData["Title"] = "Tips in Category";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">ðŸ“‚ @ViewBag.CategoryName Tips</h2>

    @if (Model.Count == 0)
    {
        <p>No tips found in this category.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var tip in Model)
            {
                <div class="list-group-item">
